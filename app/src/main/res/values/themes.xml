<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ShoplyEcommerceApp" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="RatioButtonStyles" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/ratiobutton_selector</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
    <style name="ButtonStyles" parent="Widget.AppCompat.Button">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/bg_btn_login</item>
    </style>
    <style name="CustomBtnSettingStyles" parent="Widget.AppCompat.Button">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/custombtn_selector</item>
    </style>
</resources>