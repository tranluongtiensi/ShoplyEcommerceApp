<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="148dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/footwear_item_imgv"
                android:src="@drawable/footwear1"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_seller_tv"
                android:text="Top Seller"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:background="@color/brown"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="top|start"/>
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/favorite_check_btn"
                android:background="@drawable/favorite_bg"
                android:src="@drawable/favorite_small_stroke_24px"
                android:scaleType="centerInside"
                android:layout_gravity="end"
                android:padding="3dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"/>

        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_name"
            android:text="Adidas white sneakers for men"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingVertical="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_price_dealed"
            android:text="$68"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingBottom="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/product_star_rate"
                android:background="@drawable/bg_deal"
                android:backgroundTint="@color/darkyellow"
                android:src="@drawable/star_24px"
                app:tint="@color/white"
                android:scaleType="centerInside"
                android:padding="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_level"
                android:text="4.8"
                android:textColor="#333333"
                android:layout_marginHorizontal="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_quantity"
                android:text="(455)"
                android:textColor="#777767"/>

        </LinearLayout>




    </LinearLayout>
</androidx.cardview.widget.CardView>