<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login to Shoply"
        android:id="@+id/title"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/container"
        app:layout_constraintLeft_toLeftOf="@+id/container"
        app:layout_constraintRight_toRightOf="@+id/container"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_with_google"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:orientation="horizontal"
        android:clickable="true"
        android:padding="5dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_edittext">
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:id="@+id/google_icon"
            android:src="@drawable/google_icon"
            android:contentDescription="Google Icon"
            android:layout_gravity="center"
            android:padding="3dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:id="@+id/login_with_google_tx"
            android:text="Login with google"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="@color/black"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_with_facebook"
        app:layout_constraintTop_toBottomOf="@+id/login_with_google"
        android:orientation="horizontal"
        android:clickable="true"
        android:padding="5dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_edittext">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:id="@+id/facebook_icon"
            android:src="@drawable/facebook_icon"
            android:contentDescription="Google Icon"
            android:layout_gravity="center"
            android:padding="3dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:id="@+id/login_with_facebook_tv"
            android:text="Login with google"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="@color/black"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/or_divider_layout"
        app:layout_constraintTop_toBottomOf="@id/login_with_facebook"
        app:layout_constraintRight_toRightOf="@id/login_with_facebook"
        app:layout_constraintLeft_toLeftOf="@id/login_with_facebook"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="@color/lightgray"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="@color/lightgray"
            android:textSize="18dp"
            android:padding="10dp"
            android:layout_marginVertical="20dp"/>
        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="@color/lightgray"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login_email"
        android:background="@drawable/bg_btn_login"
        app:layout_constraintTop_toBottomOf="@id/or_divider_layout"
        android:clickable="true"
        android:text="Login with email"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        android:textSize="22dp"
        android:textAlignment="center"/>




</androidx.constraintlayout.widget.ConstraintLayout>